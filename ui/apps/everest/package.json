{
  "name": "@percona/everest",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "test": "vitest run",
    "test:watch": "vitest",
    "pre-e2e": "rm -rf tests-out test-results && tsc --incremental --noImplicitAny false -p .e2e/tsconfig.json && tsc-alias -p .e2e/tsconfig.json",
    "e2e": "node ./setup-e2e-rbac-user.js && pnpm pre-e2e && cd .e2e && playwright test --project=pr",
    "e2e:ignore-rbac": "pnpm pre-e2e && cd .e2e && IGNORE_RBAC_TESTS=true playwright test --project=pr",
    "e2e:upgrade": "pnpm pre-e2e && cd .e2e && playwright test --project=upgrade",
    "e2e:release": "pnpm pre-e2e && cd .e2e && playwright test --project=release",
    "build": "tsc --incremental && vite build --emptyOutDir",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --fix",
    "format": "prettier .  --write",
    "preview": "vite preview",
    "rm-build-dir": "rm -rf dist",
    "move-build": "node ./move-build.js"
  },
  "prettier": "@percona/prettier-config",
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^5.14.15",
    "@mui/material": "^5.14.14",
    "@mui/x-date-pickers": "^7.6.2",
    "@percona/design": "workspace:^",
    "@percona/types": "workspace:^",
    "@percona/ui-lib": "workspace:^",
    "@percona/utils": "workspace:^",
    "@tanstack/react-query": "^5.22.2",
    "@tanstack/react-query-devtools": "^5.24.0",
    "axios": "^1.8.2",
    "@xyflow/react": "^12.3.6",
    "casbin.js": "^0.5.1",
    "cron-parser": "^4.9.0",
    "cron-time-generator": "^2.0.1",
    "css-mediaquery": "^0.1.2",
    "dagre": "^0.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.3.1",
    "jwt-decode": "^4.0.0",
    "material-react-table": "^1.15.1",
    "notistack": "^3.0.1",
    "oidc-react": "^3.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-router-dom": "^7.6.3",
    "semver": "^7.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@percona/eslint-config-react": "workspace:*",
    "@percona/prettier-config": "workspace:*",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/css-mediaquery": "^0.1.3",
    "@types/dagre": "^0.7.52",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "^3.0.3",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.9",
    "yaml": "^2.5.1"
  },
  "engines": {
    "pnpm": ">=9.4.0"
  }
}
