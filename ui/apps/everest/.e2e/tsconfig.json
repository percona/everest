{
  "include": ["./**/*.ts"],
  "exclude": ["./tests-out"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["@testing-library/jest-dom", "vitest/globals"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./tests-out"
  }
}
